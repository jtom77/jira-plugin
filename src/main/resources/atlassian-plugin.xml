<?xml version="1.0" encoding="UTF-8"?>
<atlassian-plugin key="${project.groupId}.${project.artifactId}"
	name="${project.name}" plugins-version="2">

	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
	</plugin-info>

	<customfield-type name="WASAUT Project Picker"
		i18n-name-key="wasaut-custom-field.name" key="wasaut-custom-field"
		class="de.mtc.jira.wasaut.cf.ContractsMultiSelectCF">
		<description key="wasaut-custom-field.description">Multi Select field for MTC Contracts
		</description>
		<resource name="edit" type="velocity"
			location="/templates/customfields/contracts-edit.vm" />
		<resource name="view" type="velocity"
			location="/templates/customfields/contracts-view.vm" />
	</customfield-type>

